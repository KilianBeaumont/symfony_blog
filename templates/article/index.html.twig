{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <h1>Liste des articles</h1>
    <a class="btn btn-success mb-3 mt-3" href="{{ path("app_articles_nouveau") }}">Créer un article</a>
    <div class="border p-2 bg-light mt-4 mb-4">
        <ul>
            {% for article in articles %}
                <li><a href="{{ path('app_articles') }}"></a><h2>{{ article.titre }}</h2></li>
                <a class="btn btn-success" href="{{ path('app_article_slug',{"slug":article.slug}) }}">Détail</a>
                <p>{{ article.createdat | date('d/m/Y') }}</p>

            {% endfor %}
        </ul>
    </div>
    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(articles) }}
    </div>

{% endblock %}

