{% extends 'base.html.twig' %}

{% block title %}Liste {{ categories.titre }}{% endblock %}

{% block body %}

    <h1>Liste des articles de la catégorie {{ categories.titre }}</h1>
    <h3>{{ categories.articles | length }} articles trouvés</h3>
    <div class="border p-2 bg-light mt-4 mb-4">
        <ul>
            {% for article in categories.articles %}
                <li><a href="{{ path('app_articles') }}"></a><h2>{{ article.titre }}</h2></li>
                <a class="btn btn-success" href="{{ path('app_article_slug',{"slug":article.slug}) }}">Détail</a>
                <p>{{ article.createdat | date('d/m/Y') }}</p>

            {% endfor %}
        </ul>
    </div>

{% endblock %}